#include <stdint.h>

// Memory-mapped addresses for GPIO (General Purpose Input/Output) Register access
#define RCGCGPIO (*((volatile uint32_t *)0x400FE608)) // GPIO Run Mode Clock Gating Control
#define GPIODEN  (*((volatile uint32_t *)0x4002551C)) // GPIO Digital Enable
#define GPIODIR  (*((volatile uint32_t *)0x40025400)) // GPIO Direction
#define GPIODATA_F (*((volatile uint32_t *)0x40025010)) // GPIO Data for Port F

/**
 * main.c
 * Purpose: Toggle a GPIO pin on and off in an infinite loop.
 */
int main(void) {
    // Enable clock for GPIO Port F
    RCGCGPIO = 0x00000020;
    
    // Set the GPIO pin as digital
    GPIODEN = 0x00000004;
    
    // Set the GPIO pin as an output
    GPIODIR = 0x00000004;
    
    // Loop infinitely
    while (1) {
        // Set the GPIO pin high
        GPIODATA_F = 0x00000004;
        
        // Simple delay loop
        for (int i = 0; i < 1000000; i++) {}
        
        // Set the GPIO pin low
        GPIODATA_F = 0x00000000;
        
        // Simple delay loop
        for (int i = 0; i < 1000000; i++) {}
    }
    // Code never reaches this point
    return 0;
}
